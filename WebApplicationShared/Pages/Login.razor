@page "/"
@    using AuthenticationUI.Locales
@    using Microsoft.AspNetCore.Components.Authorization
@    using Microsoft.AspNetCore.Authentication.Cookies
@    using Microsoft.AspNetCore.Authentication

@    using System.Security.Claims;
@    using Microsoft.AspNetCore.Components;
@    using AuthenticationUI.Components.Pages;
@    using Microsoft.JSInterop;

@    using System.Net.Http.Headers
@    using System.Net.Http.Json

@    using AuthenticationUI.Components.Shared
@    using AuthenticationUI.Helpers

@inherits LoginPage
@inject IStringLocalizer<Resource> localizer
@rendermode InteractiveServer

<CascadingAuthenticationState>
    <AuthorizeView Context="AuthenticationContext">
        <NotAuthorized>
            <div class="main-container--notauthorized">
                <div class="forms__container">
                <div class="form__wrapper form__wrapper-sign-in @(IsSignUpHidden ? "show-form" : "hide-form") @(IsSignUpHidden ? "right-position" : "left-position")">
                    <EditForm Model="@User" OnSubmit="Authenticate" FormName="SignInForm" class="form">
                        <div class="form__register form__sign-in">
                            <div class="form__header">
                                <h3 class="form__header-title">@localizer["SignInTitle"]</h3>
                                <div class="btns-container">
                                    <a href="#" class="form__header-btn">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="9" viewBox="0 0 320 512" fill="#999999"><!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M80 299.3V512H196V299.3h86.5l18-97.8H196V166.9c0-51.7 20.3-71.5 72.7-71.5c16.3 0 29.4 .4 37 1.2V7.9C291.4 4 256.4 0 236.2 0C129.3 0 80 50.5 80 159.4v42.1H14v97.8H80z" /></svg>
                                    </a>
                                    <a href="#" class="form__header-btn">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" viewBox="0 0 512 512" fill="#999999"><!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M459.4 151.7c.3 4.5 .3 9.1 .3 13.6 0 138.7-105.6 298.6-298.6 298.6-59.5 0-114.7-17.2-161.1-47.1 8.4 1 16.6 1.3 25.3 1.3 49.1 0 94.2-16.6 130.3-44.8-46.1-1-84.8-31.2-98.1-72.8 6.5 1 13 1.6 19.8 1.6 9.4 0 18.8-1.3 27.6-3.6-48.1-9.7-84.1-52-84.1-103v-1.3c14 7.8 30.2 12.7 47.4 13.3-28.3-18.8-46.8-51-46.8-87.4 0-19.5 5.2-37.4 14.3-53 51.7 63.7 129.3 105.3 216.4 109.8-1.6-7.8-2.6-15.9-2.6-24 0-57.8 46.8-104.9 104.9-104.9 30.2 0 57.5 12.7 76.7 33.1 23.7-4.5 46.5-13.3 66.6-25.3-7.8 24.4-24.4 44.8-46.1 57.8 21.1-2.3 41.6-8.1 60.4-16.2-14.3 20.8-32.2 39.3-52.6 54.3z" /></svg>
                                    </a>
                                </div>
                            </div>
                            <div class="form__main">
                                <div class="form__input-area">
                                    <label class="input-label">@localizer["LoginPageUsername"]</label>
                                    <InputText @bind-Value="@User.Name" class="input-field" placeholder=@localizer["LoginPageUsername"] />
                                </div>
                                <div class="form__input-area">
                                    <label class="input-label">@localizer["LoginPagePassword"]</label>
                                    <InputText @bind-Value="@User.Password" type="password" class="input-field" placeholder=@localizer["LoginPagePassword"] />
                                </div>
                                <button type="submit" class="form__btn-submit">@localizer["SignInBtnText"]</button>
                            </div>
                            <div class="form__footer">
                                <div class="form__footer-checkpart">
                                    <label class="checkbox__container">
                                        @localizer["LoginPageRememberMe"]
                                        <input type="checkbox">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <a href="#" class="a__forgot">@localizer["LoginPageForgotPassword"]</a>
                            </div>
                        </div>
                    </EditForm>
                </div>

                <div class="form__wrapper form__wrapper-sign-up @(IsSignUpHidden ? "hide-form" : "show-form") @(IsSignUpHidden ? "right-position" : "left-position")">
                    <EditForm Model="@Register" OnSubmit="Registration" FormName="SignUpForm" class="form">
                        <div class="form__register form__sign-up">
                            <div class="form__header">
                                <h3 class="form__header-title">@localizer["SignUpTitle"]</h3>
                                <div class="btns-container">
                                    <a href="#" class="form__header-btn">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="9" viewBox="0 0 320 512" fill="#999999"><!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M80 299.3V512H196V299.3h86.5l18-97.8H196V166.9c0-51.7 20.3-71.5 72.7-71.5c16.3 0 29.4 .4 37 1.2V7.9C291.4 4 256.4 0 236.2 0C129.3 0 80 50.5 80 159.4v42.1H14v97.8H80z" /></svg>
                                    </a>
                                    <a href="#" class="form__header-btn">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" viewBox="0 0 512 512" fill="#999999"><!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M459.4 151.7c.3 4.5 .3 9.1 .3 13.6 0 138.7-105.6 298.6-298.6 298.6-59.5 0-114.7-17.2-161.1-47.1 8.4 1 16.6 1.3 25.3 1.3 49.1 0 94.2-16.6 130.3-44.8-46.1-1-84.8-31.2-98.1-72.8 6.5 1 13 1.6 19.8 1.6 9.4 0 18.8-1.3 27.6-3.6-48.1-9.7-84.1-52-84.1-103v-1.3c14 7.8 30.2 12.7 47.4 13.3-28.3-18.8-46.8-51-46.8-87.4 0-19.5 5.2-37.4 14.3-53 51.7 63.7 129.3 105.3 216.4 109.8-1.6-7.8-2.6-15.9-2.6-24 0-57.8 46.8-104.9 104.9-104.9 30.2 0 57.5 12.7 76.7 33.1 23.7-4.5 46.5-13.3 66.6-25.3-7.8 24.4-24.4 44.8-46.1 57.8 21.1-2.3 41.6-8.1 60.4-16.2-14.3 20.8-32.2 39.3-52.6 54.3z" /></svg>
                                    </a>
                                </div>
                            </div>
                            <div class="form__main">
                                <div class="form__input-area">
                                    <label class="input-label">@localizer["LoginPageUsername"]</label>
                                    <InputText @bind-Value="@Register.Username" type="text" class="input-field" placeholder=@localizer["LoginPageUsername"] />
                                </div>
                                <div class="form__input-area form__sign-up-pwd">
                                    <label for="sign-up-pwd" class="input-label">@localizer["LoginPagePassword"]</label>
                                    <InputText @bind-Value="@Register.Password" type="password" class="input-field" placeholder=@localizer["LoginPagePassword"] />
                                </div>
                                <div class="form__select-container">
                                    <label for="sign-up-role" class="input-label">@localizer["LoginPageRole"]</label>
                                    <InputSelect @bind-Value="Register.Role" class="form__select">
                                        <option class="form__select-option">@localizer["LoginPageRoleAdmin"]</option>
                                        <option class="form__select-option">@localizer["LoginPageRoleUser"]</option>
                                    </InputSelect>
                                </div>
                                <button type="submit" class="form__btn-submit">@localizer["SignUpTitle"]</button>
                            </div>
                            <div class="form__footer">
                                <div class="form__footer-checkpart">
                                    <label class="checkbox__container">
                                        @localizer["LoginPageRememberMe"]
                                        <input type="checkbox">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </EditForm>
                </div>

                <div class="form__wrapper form__wrapper-img form__img @(IsSignUpHidden ? "left-position" : "right-position")">
                    <h1 class="form__img-title">@(IsSignUpHidden ? localizer["LoginImgSignInTitle"] : localizer["LoginImgSignUpTitle"])</h1>
                    <h3 class="form__img-subtitle">@(IsSignUpHidden ? localizer["LoginImgSignInQuestion"] : localizer["LoginImgSignUpQuestion"])</h3>
                    <button class="form__img-btn" @onclick="ChangeHiding">@(IsSignUpHidden ? localizer["LoginImgBtnSignUp"] : localizer["LoginImgBtnSignIn"])</button>
                    <div class="lang-block__wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" class="lang-block__img" fill="#0a1f42" height="10" width="10" viewBox="0 0 512 512"><path d="M352 256c0 22.2-1.2 43.6-3.3 64l-185.3 0c-2.2-20.4-3.3-41.8-3.3-64s1.2-43.6 3.3-64l185.3 0c2.2 20.4 3.3 41.8 3.3 64zm28.8-64l123.1 0c5.3 20.5 8.1 41.9 8.1 64s-2.8 43.5-8.1 64l-123.1 0c2.1-20.6 3.2-42 3.2-64s-1.1-43.4-3.2-64zm112.6-32l-116.7 0c-10-63.9-29.8-117.4-55.3-151.6c78.3 20.7 142 77.5 171.9 151.6zm-149.1 0l-176.6 0c6.1-36.4 15.5-68.6 27-94.7c10.5-23.6 22.2-40.7 33.5-51.5C239.4 3.2 248.7 0 256 0s16.6 3.2 27.8 13.8c11.3 10.8 23 27.9 33.5 51.5c11.6 26 20.9 58.2 27 94.7zm-209 0L18.6 160C48.6 85.9 112.2 29.1 190.6 8.4C165.1 42.6 145.3 96.1 135.3 160zM8.1 192l123.1 0c-2.1 20.6-3.2 42-3.2 64s1.1 43.4 3.2 64L8.1 320C2.8 299.5 0 278.1 0 256s2.8-43.5 8.1-64zM194.7 446.6c-11.6-26-20.9-58.2-27-94.6l176.6 0c-6.1 36.4-15.5 68.6-27 94.6c-10.5 23.6-22.2 40.7-33.5 51.5C272.6 508.8 263.3 512 256 512s-16.6-3.2-27.8-13.8c-11.3-10.8-23-27.9-33.5-51.5zM135.3 352c10 63.9 29.8 117.4 55.3 151.6C112.2 482.9 48.6 426.1 18.6 352l116.7 0zm358.1 0c-30 74.1-93.6 130.9-171.9 151.6c25.5-34.2 45.2-87.7 55.3-151.6l116.7 0z" /></svg>
                        <small class="lang-block__text">Українська</small>
                    </div>
                </div>
            </div>
            </div>
        </NotAuthorized>
        <Authorized>
            <div class="main-container--authorized">
                <h2 class="page__title">@localizer["NavHome"]</h2>
                <h2 class="page__paragraph">@localizer["HomeGreeting"], @UserInfo.Name</h2>
            </div>
        </Authorized>
    </AuthorizeView>
</CascadingAuthenticationState>

<div class="error__container" style="@(IsErrorVisible ? "display:block;" : "display:none;")">
    <h3 class="error__container-title">@ErrorMessage</h3>
</div>